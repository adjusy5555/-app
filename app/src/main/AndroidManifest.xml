<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 网络权限（如果后续需要） -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />


    <application

        android:name=".MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Material3.Light.NoActionBar"
        tools:targetApi="31">

        <!-- 登录界面 - 启动页 -->
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 注册界面 -->
        <activity
            android:name=".ui.login.RegisterActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- 用户主界面 -->
        <activity
            android:name=".ui.user.UserMainActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- 快递员主界面 -->
        <activity
            android:name=".ui.courier.CourierMainActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- 管理员主界面 -->
        <activity
            android:name=".ui.admin.AdminMainActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- 地址管理 -->
        <activity
            android:name=".ui.user.AddressListActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- 编辑地址 -->
        <activity
            android:name=".ui.user.EditAddressActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- 快递详情 -->
        <activity
            android:name=".ui.user.PackageDetailActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- 修改密码 -->
        <activity
            android:name=".ui.user.ChangePasswordActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <!-- 编辑资料 -->
        <activity
            android:name=".ui.user.EditProfileActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

    </application>

</manifest>